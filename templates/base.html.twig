<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width">
        <title>{% block title %}DANMAL{% endblock %}</title>

        <link rel="apple-touch-icon" href="{{ asset('build/images/danmal-favicon.png') }}">
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('build/images/danmal-favicon.png') }}">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('front1') }}
            {{ encore_entry_link_tags('front2') }}
            {{ encore_entry_link_tags('front3') }}
            {{ encore_entry_link_tags('front4') }}
            {{ encore_entry_link_tags('front5') }}
            <link rel="stylesheet" href="/build/app.css">

            <!-- Load fonts style after rendering the layout styles -->
            <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">

        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('js1') }}
            {{ encore_entry_script_tags('js2') }}
            {{ encore_entry_script_tags('slick') }}
            {{ encore_entry_script_tags('js3') }}
            {{ encore_entry_script_tags('js4') }}
            {{ encore_entry_script_tags('js5') }}
{#            {{ encore_entry_script_tags('js6') }}#}
        {% endblock %}


    </head>
    <body>
    <!-- social i kontakt-->
    <nav class="navbar navbar-expand-lg bg-dark navbar-light d-none d-lg-block" id="templatemo_nav_top">
        <div class="container text-light">
            <div class="w-100 d-flex justify-content-between">
                <div>
                    <i class="fa fa-envelope mx-2"></i>
                    <a class="navbar-sm-brand text-light text-decoration-none email-address"></a>
                    <i class="fa fa-phone mx-2"></i>

                    <span class="phone"></span>

                </div>
                <div>
                    <a class="text-light" href="https://fb.com" target="_blank" rel="sponsored"><i class="fab fa-facebook-f fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="https://twitter.com/" target="_blank"><i class="fab fa-twitter fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="https://www.linkedin.com/" target="_blank"><i class="fab fa-linkedin fa-sm fa-fw"></i></a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light shadow">
        <div class="container d-flex justify-content-between align-items-center">

            <a class="navbar-brand text-success logo h1 align-self-center" href="{{ path('index') }}">
                <img src="{{ asset('build/images/logo.png') }}" id="front-logo" class="whatever" alt="foo alt" />
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="align-self-center collapse navbar-collapse flex-fill d-lg-flex justify-content-lg-between" id="templatemo_main_nav">
                <div class="flex-fill">
                    <ul class="nav navbar-nav d-flex justify-content-between mx-lg-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('index') }}"><span class="nav-link-text">Strona główna</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><span class="nav-link-text">O nas</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_sklep') }}"><span class="nav-link-text">Sklep</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><span class="nav-link-text">Kontakt</span></a>
                        </li>
                    </ul>
                </div>
                <div class="navbar align-self-center d-flex">
                    <div class="d-lg-none flex-sm-fill mt-3 mb-4 col-7 col-sm-auto pr-3">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-lg" id="inputMobileSearch" placeholder="Szukaj ...">
                            <div class="input-group-text">
                                <i class="fa fa-fw fa-search"></i>
                            </div>
                        </div>
                    </div>
                    <a class="nav-icon d-none d-lg-inline" href="#" data-bs-toggle="modal" data-bs-target="#templatemo_search">
                        <i class="fa fa-fw fa-search text-dark mr-2 fa-lg"></i>
                    </a>
                    <a class="nav-icon position-relative text-decoration-none" href="{{ path('app_koszyk') }}">
                        <i class="fa fa-fw fa-cart-arrow-down text-dark mr-1 fa-lg"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-light text-dark" id="cart-total-items"></span>
                    </a>
                    <a class="nav-icon position-relative text-decoration-none" href="{{ path('admin_dashboard') }}">
                        <i class="fa fa-fw fa-user text-dark mr-3 fa-lg"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-light text-dark">{% if is_granted('ROLE_USER') %}{{ app.user.name }}{% else %}Zaloguj{% endif %}</span>
                    </a>
                </div>
            </div>

        </div>
    </nav>

    <section class="construction-bar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="construction-message-container">
                        <p class="construction-message">Uwaga - strona w budowie</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Close Header -->

    <!-- Modal -->
    <div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="w-100 pt-1 mb-5 text-right">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="" method="get" class="modal-content modal-body border-0 p-0">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Szukaj ...">
                    <button type="submit" class="input-group-text bg-success text-light">
                        <i class="fa fa-fw fa-search text-white"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>


    {% block body %}{% endblock %}

    <!-- Start Footer -->
    <footer class="bg-dark" id="tempaltemo_footer">
        <div class="container">
            <div class="row">

                <div class="col-md-4 pt-5">
                    <h2 class="h2 text-success border-bottom pb-3 border-light logo">Danmal</h2>
                    <ul class="list-unstyled text-light footer-link-list">
                        <li>
                            <i class="fas fa-map-marker-alt fa-fw"></i>
                            Górska 79, 42-350 Markowice
                        </li>
                        <li>
                            <i class="fa fa-phone fa-fw"></i>
                            <span class="phone"></span>

                            <script>
                                // Funkcja generująca numer telefonu
                                function generatePhoneNumber(className, phoneNumber) {
                                    var elements = document.getElementsByClassName(className);
                                    for (var i = 0; i < elements.length; i++) {
                                        var span = elements[i];
                                        span.innerHTML = '<a class="text-decoration-none" href="tel:' + phoneNumber + '">' + phoneNumber + '</a>';
                                    }
                                }

                                // Wywołanie funkcji dla miejsc o klasie "phone-number"
                                generatePhoneNumber('phone', '667-211-511');
                            </script>
                        <li>
                            <i class="fa fa-envelope fa-fw"></i>
                            <a class="text-decoration-none email-address"></a>
                            <script>
                                // Funkcja generująca link e-mail
                                function generateEmailAddress(className, emailAddress) {
                                    var elements = document.getElementsByClassName(className);
                                    for (var i = 0; i < elements.length; i++) {
                                        var span = elements[i];
                                        span.innerHTML = '<a class="navbar-sm-brand text-light text-decoration-none" href="mailto:' + emailAddress + '">' + emailAddress + '</a>';
                                    }
                                }

                                // Wywołanie funkcji dla miejsc o klasie "email-address"
                                generateEmailAddress('email-address', 'danmal@kompozycjecmentarne.pl');
                            </script>


                        </li>
                    </ul>
                </div>

                <div class="col-md-4 pt-5">
                    <h2 class="h2 text-light border-bottom pb-3 border-light">Produkty</h2>
                    <ul class="list-unstyled text-light footer-link-list">
                        <li><a class="text-decoration-none" href="#">Całoroczne</a></li>
                        <li><a class="text-decoration-none" href="#">Wiosna</a></li>
                        <li><a class="text-decoration-none" href="#">Wszystkich Świętych</a></li>
                        <li><a class="text-decoration-none" href="#">Boże Narodzenie</a></li>
                        <li><a class="text-decoration-none" href="#">Dla domu</a></li>
                    </ul>
                </div>

                <div class="col-md-4 pt-5">
                    <h2 class="h2 text-light border-bottom pb-3 border-light">Mapa strony</h2>
                    <ul class="list-unstyled text-light footer-link-list">
                        <li><a class="text-decoration-none" href="#">Strona główna</a></li>
                        <li><a class="text-decoration-none" href="{{ path('admin_dashboard') }}">Strefa klienta</a></li>
                        <li><a class="text-decoration-none" href="#">O nas</a></li>
                        <li><a class="text-decoration-none" href="{{ path('app_sklep') }}">Sklep</a></li>
                        <li><a class="text-decoration-none" href="#">Kontakt</a></li>
                    </ul>
                </div>

            </div>

            <div class="row text-light mb-4">
                <div class="col-12 mb-3">
                    <div class="w-100 my-3 border-top border-light"></div>
                </div>
                <div class="col-auto me-auto">
                    <ul class="list-inline text-left footer-icons">
                        <li class="list-inline-item border border-light rounded-circle text-center">
                            <a class="text-light text-decoration-none" target="_blank" href="http://facebook.com/"><i class="fab fa-facebook-f fa-lg fa-fw"></i></a>
                        </li>
                        <li class="list-inline-item border border-light rounded-circle text-center">
                            <a class="text-light text-decoration-none" target="_blank" href="https://www.instagram.com/"><i class="fab fa-instagram fa-lg fa-fw"></i></a>
                        </li>
                        <li class="list-inline-item border border-light rounded-circle text-center">
                            <a class="text-light text-decoration-none" target="_blank" href="https://twitter.com/"><i class="fab fa-twitter fa-lg fa-fw"></i></a>
                        </li>
                        <li class="list-inline-item border border-light rounded-circle text-center">
                            <a class="text-light text-decoration-none" target="_blank" href="https://www.linkedin.com/"><i class="fab fa-linkedin fa-lg fa-fw"></i></a>
                        </li>
                    </ul>
                </div>
                <div class="col-auto">
                    <label class="sr-only" for="subscribeEmail">Email</label>
                    <div class="input-group mb-2">
                        <input type="text" class="form-control bg-dark border-light" id="subscribeEmail" placeholder="Email">
                        <div class="input-group-text btn-success text-light">Subskrybuj</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-100 bg-black py-3">
            <div class="container">
                <div class="row pt-2">
                    <div class="col-12">
                        <p class="text-left text-light">
                            Copyright &copy; {{ 'now' | date('Y') }} Danmal
                            | Designed by <a rel="sponsored" href="#" target="_blank">Mariusz Kordiaka</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </footer>
    <!-- End Footer -->
    </body>
</html>
